
// Define defaults for reference data
params {
  genomes {
    'GRCh38' {
      fasta = "${baseDir}/data/reference/sequence/GRCh38/Homo_sapiens.GRCh38.cdna.all.fa"
      fasta_url = "ftp://ftp.ensembl.org/pub/release-87/fasta/homo_sapiens/cdna/Homo_sapiens.GRCh38.cdna.all.fa.gz"
      salmon = "${baseDir}/data/reference/indexes/salmon/GRCh38/"
      kallisto = "${baseDir}/data/reference/indexes/kallisto/GRCh38/"
    }
  }
}

